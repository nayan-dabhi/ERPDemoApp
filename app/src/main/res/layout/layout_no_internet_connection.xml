<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_tops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/img_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/margin_10dp"
            android:src="@drawable/ic_wifi_signal" />

        <TextView
            android:id="@+id/txt_no_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_wifi"
            android:layout_centerHorizontal="true"
            android:text="No Network!"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_no_network"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="Tap to Retry"
            android:textSize="@dimen/text_10"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_make_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Please make sure that you are connected to internet"
            android:textSize="@dimen/text_10"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_make_sure"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/button_setting"
            android:gravity="center"
            android:padding="15dp"
            android:text="GO TO SETTINGS"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_settings"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/button_exit"
            android:gravity="center"
            android:padding="15dp"
            android:text="EXIT"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_13"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>